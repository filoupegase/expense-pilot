{
  "name": "bun-server",
  "module": "server/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "client": "cd client && bun run dev",
    "server": "bun run --hot server/index.ts",
    "dev": "concurrently \"bun run server\" \"bun run client\"",
    "clean": "rm -rf dist && echo 'Done.'",
    "build": "bun build ./server/index.ts --outdir ./dist --target bun && cd client && bun run build",
    "ts:check": "tsc",
    "db:up": "docker compose up -d",
    "db:generate:migration": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.2",
    "@kinde-oss/kinde-typescript-sdk": "^2.12.0",
    "better-auth": "^1.3.4",
    "drizzle-orm": "^0.44.4",
    "drizzle-seed": "^0.3.1",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.8.12",
    "pg": "^8.16.3",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "latest",
    "@types/bun": "latest",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "open-cli": "^8.0.0"
  }
}
